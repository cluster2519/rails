<section class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-md-3 bg-light" >
      <table class="table table-striped table table-hover">
        <thead class="thead-Success">
          <tr>
            <th scope="col">#</th>
            <th scope="col">名前</th>
            <th scope="col">よみがな</th>
            <th scope="col">Tel</th>
            <th scope ="col">EMail</th>
            <th scope ="col">郵便番号</th>
            <th scope ="col">住所</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"></th>
            <td><%= link_to user.name , edit_user_path(user.id)%></td>
            <td><%= user.yomi %></td>
            <td><%= user.phone %></td>
            <td><%= user.email %></td>
            <td><%= user.postalcode %></td>
            <td><%= user.address %></td>
          </tr>
        <% end %>  
        </tbody>
      </table>
        <p></p>
        <p></p>
        <p></p>
      <%= link_to "新規登録", new_user_path %>
    </div>
  </div>
</section>
